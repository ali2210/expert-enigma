<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://unpkg.com/primevue/resources/themes/lara-light-indigo/theme.css" rel="stylesheet">
    <link href="https://unpkg.com/primevue/resources/primevue.min.css" rel="stylesheet">
    <link href="https://unpkg.com/primeicons/primeicons.css" rel="stylesheet">
    <title> {{.Title}} </title>
    <script src="https://unpkg.com/vue@next"></script>
    <script src="https://unpkg.com/primevue/core/core.min.js"></script>
    <script src="https://unpkg.com/primevue/slider/slider.min.js"></script>
    <script src="https://unpkg.com/primevue@^3/dock/dock.min.js"></script>
    <script src="https://unpkg.com/primevue@^3/toast/toast.min.js"></script>
    <script src="https://unpkg.com/primevue@^3/toastservice/toastservice.min.js"></script>
    <script src="https://unpkg.com/primevue@^3/badge/badge.min.js"></script>
    <script src="https://unpkg.com/primevue@^3/badgedirective/badgedirective.min.js"></script>
    <script src="https://unpkg.com/vue-router@4.0.0/dist/vue-router.global.js"></script>
</head>
<body>
    <div id="app" class="dock-menu">
        <p-menu-bar>
            <p-toast></p-toast>
            <p-toast position="top-center" group="tc"></p-toast>
            <i class="pi pi-home" style="display: flex;position: absolute;left: 658px;top: 29px;font-size: x-large;color: slategray;"></i>
            <span class="time" style="display: flex; position: absolute; left: 625px; top: 4pc; font-size: x-large; color: slategray;"> Wednesday 10:00 PKT </span>
            <Button type="button" label ="Secondary" class="submenu" style="display: flex; position: absolute; border: none; background: transparent;">
                <i class="pi pi-bars"></i>
            </Button>
            <form class="search-input" method="post" action="/search">
                <Button type="button" label ="Secondary" class="search" style="display: flex; position: absolute; left: 54px; border: none; background: transparent;">
                    <i class="pi pi-search"></i>
                </Button>
                <Input type="text" name="search" placeholder="Search" class="find" style="position: relative;left: 5pc;top: 20px;border-radius: 7px; visibility : hidden;"></Input>
            </form>
            <i class="pi pi-desktop" title="" style="position: absolute;display: flex;left: 59pc;"></i>
            <i class="pi pi-tablet" title="" style="position: absolute;display: flex;left: 61pc;"></i>
            <i class="pi pi-mobile" title="" style="display: flex;position: absolute;left: 63pc;"></i>
            <i class="pi pi-wifi" style="display: flex;position: absolute;left: 65pc;"></i>
            <i class="pi pi-sort-numeric-down" style="display: flex;position: absolute;left: 67pc;">
                    <span class="downloadmeter" style="position: absolute;top: 16px;left: -1px;"></span>
            </i>
        </p-menu-bar>
        <div class="vertical-menu" style="display: flex;position: absolute;top: 4pc;width: 7pc;height: 28pc;background: whitesmoke;border-radius: 19px; visibility:hidden;">
            
            <i class="pi pi-unlock" title="Account Unlocked" style="display: flex;position: absolute;left: 3pc;top: 2pc;color: slategray; "></i>
            <a href="/" title="Home" style="display: flex;position: absolute;left: 3pc;top: 5pc;color: slategray;">
                <i class="pi pi-home"></i>
            </a>
            <a href="/download" title="How to install" style="display: flex;position: absolute;left: 3pc;top: 8pc;color: slategray;">
                <i class="pi pi-download"></i>
            </a>
            <a href="/projects" title="Projects already in production" style="position: absolute;display: flex;left: 3pc;top: 11pc;color: slategray;">
                <i class="pi pi-box"></i>
            </a>
            <a href="/sdk" title="Software Development Tools" style="position: absolute;display: flex;left: 3pc;top: 14pc;color: slategray;">
                <i class="pi pi-briefcase"></i>
            </a>
            <a href="/api" title="Developers tools" style="position: absolute;display: flex;left: 3pc;top: 17pc;color: slategray;">
                <i class="pi pi-key"></i>
            </a>
                <i class="pi pi-bell" style="position: absolute;display: flex;left: 3pc;top: 20pc;color: slategray;">
                    <p style="position: absolute;display: flex;top: -1.3pc;left: 1pc;color: red;font-size: small;font-family: cursive;">
                        {{.Badge}}
                    </p>
                </i>
            <a href="/sign" title="Lock Your Account" style="position: absolute;display: flex;left: 3pc;top: 23pc;color: slategray;">
                <i class="pi pi-sign-out"></i>
            </a>
        </div>
    </div>

    <div class="analysis" style="display: flex;position: absolute;top: 10pc;left: 20pc;width: 22pc;height: 20pc;color: slategray;background: azure;border-radius: 10pc;">
        <form method="post" action="/userboard">
            <h3 style="position: absolute;display: flex;font-size: xxx-large;top: 0pc;left: 10pc;">
                {{.Badge}}
            </h3>
            <Button type="submit" label ="Danger" style="position: absolute;top: 16pc;left: 12pc;border: none;background: transparent;">
                <i class="pi pi-trash" title="Clear the Notification" style="font-size: xx-large;position: absolute;left: -2pc;"></i>
            </Button>
        </form>
    </div>
    <script>
        
        const desktop = document.getElementsByClassName('pi-desktop')[0];
        const tab = document.getElementsByClassName('pi-tablet')[0];
        const mobile = document.getElementsByClassName('pi-mobile')[0];
        const wificonn = document.getElementsByClassName('pi-wifi')[0];
        const downlink = document.getElementsByClassName('pi-sort-numeric-down')[0];
        const timeDate = document.getElementsByClassName('time')[0];
        const to_search = document.getElementsByClassName('search')[0];
        const find = document.getElementsByClassName('find')[0];
        const submenu = document.getElementsByClassName('submenu')[0];
        const vertical = document.getElementsByClassName('vertical-menu')[0];
        
        let day = new Date().getDay()
        switch (day) {
            case 1:
            timeDate.innerHTML = new Date().getDate() + '-' + new Date().getMonth() + '-' + new Date().getYear()+ ','+ 'Mon';
            break;
            case 2:
            timeDate.innerHTML = new Date().getDate() + '-' + new Date().getMonth() + '-' + new Date().getYear()+ ','+ 'Tues';
            break;
            case 3:
            timeDate.innerHTML = new Date().getDate() + '-' + new Date().getMonth() + '-' + new Date().getYear()+ ','+ 'Wed';
            break;
            case 4:
            timeDate.innerHTML = new Date().getDate() + '-' + new Date().getMonth() + '-' + new Date().getYear()+ ','+ 'Thrus';
            break;
            case 5:
            timeDate.innerHTML = new Date().getDate() + '-' + new Date().getMonth() + '-' + new Date().getYear()+ ','+ 'Fri';
            break;
            case 6:
            timeDate.innerHTML = new Date().getDate() + '-' + new Date().getMonth() + '-' + new Date().getYear()+ ','+ 'Sat';
            break;
            case 7:
            timeDate.innerHTML = new Date().getDate() + '-' + new Date().getMonth() + '-' + new Date().getYear()+ ','+ 'Sun';
            break;
        }
        
        if (!navigator.userAgentData.mobile) {
            desktop.title = navigator.userAgent+ "," + navigator.vendor;
            desktop.style.color = "green";
        }else if (navigator.userAgent === 'Tablet'){
            tab.title = navigator.userAgent+ "," + navigator.vendor;
            tab.style.color = "green";
        }else if (navigator.userAgentData.mobile){
            mobile.title = navigator.userAgent+ "," + navigator.vendor;
            mobile.style.color = "green";
        }

        if (navigator.connection.downlink >= '0'){
            wificonn.style.color = "green";
            downlink.style.color = "green";
            downlink.children[0].innerHTML = navigator.connection.downlink; 
        }else{
            wificonn.style.color = "red";
            downlink.style.color = "red";
            downlink.children[0].innerHTML = navigator.connection.downlink;
        }

        to_search.addEventListener('click', ()=>{
            if (find.style.visibility === 'hidden'){
                find.style.visibility = "visible";
            }else{
                find.style.visibility = "hidden";
            }
        });

        submenu.addEventListener('click', ()=>{
            if(vertical.style.visibility === 'hidden'){
                vertical.style.visibility = "visible";
            }else{
                vertical.style.visibility = "hidden";
            }
        });


    </script>
</body>
</html>